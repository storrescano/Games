<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ece8e4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/titan_one"
            android:paddingLeft="30dp"
            android:text="@string/search_by_name"
            android:textColor="#787266"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/name_to_search"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:paddingLeft="10dp"
            android:textColor="#787266"
            tools:ignore="LabelFor,RtlHardcoded,RtlSymmetry,TextFields" />

        <Button
            android:id="@+id/search_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/titan_one"
            android:text="@string/search_button"
            android:textColor="#787266" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/titan_one"
            android:paddingLeft="30dp"
            android:text="@string/search_by_score"
            android:textColor="#787266"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/score_to_search"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:paddingLeft="10dp"
            android:textColor="#787266"
            tools:ignore="LabelFor,RtlHardcoded,RtlSymmetry,TextFields" />


        <Spinner
            android:id="@+id/spinner_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:textColor="#787266" />

        <Button
            android:id="@+id/search_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/titan_one"
            android:text="@string/search_button"
            android:textColor="#787266" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/order_by_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/titan_one"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:text="@string/name"
            android:textColor="#787266"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/order_by_score"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/titan_one"
            android:paddingLeft="10dp"
            android:text="@string/scoreButton"
            android:textColor="#787266"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <Button
            android:id="@+id/order_by_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/titan_one"
            android:paddingLeft="10dp"
            android:text="@string/timeButton"
            android:textColor="#787266"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_scores"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="#ece8e4" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/update_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/titan_one"
            android:text="@string/updateButton"
            android:textColor="#787266" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/titan_one"
            android:text="@string/deleteButton"
            android:textColor="#787266" />

    </LinearLayout>


</LinearLayout>